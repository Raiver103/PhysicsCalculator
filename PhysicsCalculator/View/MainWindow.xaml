<Window x:Class="PhysicsCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhysicsCalculator"
        mc:Ignorable="d" 
        DataContext="{Binding Source={StaticResource VmLocator}, Path=MainVM}"
        xmlns:VM="clr-namespace:PhysicsCalculator.ViewModel" 
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UniformGrid Columns="8" Grid.Row="0">
            <Button Command="{Binding GoToBack}" MaxWidth="30" MaxHeight="25" HorizontalAlignment="Left" Content="Back"/>
        </UniformGrid>

        <Frame Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" Grid.Row="1"/> 
    </Grid> 
</Window>
